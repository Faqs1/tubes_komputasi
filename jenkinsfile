pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/tubes_komputasi.git'
                sh 'mvn clean install'
            }
        }

        stage('Deploy') {
            steps {
                script {
                    docker.build('tubes').push('tubes')
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
            junit 'target/surefire-reports/*.xml'
        }
    }
}

