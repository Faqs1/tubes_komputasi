pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/tubes_komputasi.git'
                sh 'mvn clean install' 
            }
        }

        stage('Deploy') {
            steps {
                script {
                    docker.build('your-image-name').push('your-docker-repo/your-image-name')
                }
            }
        }

        stage('Operate') {
            steps {
                script {
                    // Menjalankan playbook Ansible
                    ansiblePlaybook credentialsId: 'your-ansible-credentials-id', inventory: 'path/to/your/inventory', playbook: 'path/to/your/playbook.yml'
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
            junit 'target/surefire-reports/*.xml'
        }
    }
}

