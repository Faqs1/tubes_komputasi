pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch:'main', url:  'https://github.com/Faqs1/tubes_komputasi.git'
            }
        }
     
        stage('Run Ansible Playbook') {
            steps {
              ansibleplaybook credentialsId: 'da41a0f6-60a0-468b-b25c-c983c5dbc335', inventory: 'hosts', playbook: 'playbooks/mariadb.yml'

            }
        }
    }
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
